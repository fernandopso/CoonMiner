.panel.panel-default.xs-padding
  .panel-body.text-center.xs-panel
    .ui-group-buttons
      = link_to t('landing.answer.positive'), token_classify_path(params[:token_id], tweet, positive_params), remote: true, method: :put, class: 'btn btn-primary', data: { disable_with: t('wait') }
      .or
      = link_to t('landing.answer.neutral'), token_classify_path(params[:token_id], tweet, neutral_params), remote: true, method: :put, class: 'btn btn-default', data: { disable_with: t('wait') }
      .or
      = link_to t('landing.answer.negative'), token_classify_path(params[:token_id], tweet, negative_params), remote: true, method: :put, class: 'btn btn-danger', data: { disable_with: t('wait') }
